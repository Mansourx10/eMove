{% extends 'layouts/layout.html.twig' %}

{% block title %}Location{% endblock %}

{% block content %}
    <h1>Location</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Prix</th>
                <td>{{ location.prix }}</td>
            </tr>
            <tr>
                <th>Date_achat</th>
                <td>{{ location.dateAchat ? location.dateAchat|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Debut_location</th>
                <td>{{ location.debutLocation ? location.debutLocation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Fin_location</th>
                <td>{{ location.finLocation ? location.finLocation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ location.status }}</td>
            </tr>
            <tr>
                <th>Voiture</th>
                <td>{{ location.Voiture.marque }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('location_index') }}">back to list</a>

    <a href="{{ path('location_edit', {'id': location.id}) }}">edit</a>

    {{ include('location/_delete_form.html.twig') }}
{% endblock %}