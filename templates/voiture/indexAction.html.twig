{% extends 'base.html.twig' %}

{% block title %}Voiture indexAction{% endblock %}

{% block body %}
    <h1>Voiture indexAction</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Marque</th>
            <th>Modele</th>
            <th>Numero_de_serie</th>
            <th>Couleur</th>
            <th>Plaque_immatriculation</th>
            <th>Kilometre</th>
            <th>Disponible</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for voiture in voitures %}
            <tr>
                <td>{{ voiture.id }}</td>
                <td>{{ voiture.marque }}</td>
                <td>{{ voiture.modele }}</td>
                <td>{{ voiture.numero_de_serie }}</td>
                <td>{{ voiture.couleur }}</td>
                <td>{{ voiture.plaque_immatriculation }}</td>
                <td>{{ voiture.kilometre }}</td>
                <td>{{ voiture.disponible ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('voiture_show', {'id': voiture.id}) }}">show</a>
                    <a href="{{ path('voiture_edit', {'id': voiture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('voiture_new') }}">Create new</a>
{% endblock %}